---
import Logo from "../images/cropper.png";
---

<header>
  <ul>
    <li>۰۹۳۷۸۸۵۸۷۶۰</li>
  </ul>
  <img src={Logo.src} width="80px" height="auto" />
</header>

<style>
  header {
    background-color: white;
    border-bottom: 1px solid #f2f2f2;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    max-width: 900px;
    margin: 20px auto;
    box-shadow:
      rgba(0, 0, 0, 0) 0px 0px 0px 0px,
      rgba(0, 0, 0, 0) 0px 0px 0px 0px,
      rgba(69, 69, 69, 0.2) 0px 0px 56px 0px;
    border-radius: 60px;
    padding: 6px 30px;
  }

  ul {
    display: flex;
    list-style: none;
    justify-content: space-between;
    align-items: center;
    margin: 0;
    padding: 0;
    gap: 30px;
    cursor: pointer;
    font-size: 18px;

    & li {
      border-bottom: 2px solid transparent;
    }

    & li:hover {
      border-bottom: 2px solid black;
    }
  }
</style>
